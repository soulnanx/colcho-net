<% @rooms.each do |room| %>
  <tr>
    <td><%= room.title %></td>
    <td><%= room.location %></td>
    <td><%= room.description %></td>
    <td><%= link_to t('links.show'), room %></td>
    <td><%= link_to t('links.edit'), edit_room_path(room) %></td>
    <td><%= link_to t('links.destroy'), room, confirm: t('message.destroy'), method: :delete %></td>
  </tr>
<% end %>
</table>

